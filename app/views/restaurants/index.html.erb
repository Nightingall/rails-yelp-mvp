


<div class="text-center container">
  <h2>Best Resturants </h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Address</th>
        <th>Phone Number</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><h3><%= restaurant.name %></h3></td>
          <td><h3><%= restaurant.category %></h3></td>
          <td><h3><%= restaurant.address %></h3></td>
          <td><h3><%= restaurant.phone_number %></h3></td>
          <td><h3><%= link_to 'Show', restaurant, class: "btn btn-primary btn-lg margin-small" %></h3></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>

